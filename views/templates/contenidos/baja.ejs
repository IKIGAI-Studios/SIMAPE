
<div class="row">
    <div class="col-lg-9 col-md-9 col-sm-9" id="seccionBajaExpediente">

        <form id="formBusquedaExpedienteBaja">
            <div class="row space-between">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <label class="dark-label" for="nssBusquedaExpedienteBaja">NSS</label>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <input type="number" class="text-input" id="nssBusquedaExpedienteBaja" name="nss"/>
                </div>
                <!--LUPA-->
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="d-flex justify-content-end">
                        <button class="btn-verde" style="margin-top: 0; font-family: none; justify-content: center; display: flex;">
                            <img src="/icons/lupa.png" alt="BUSCAR" style="width: 1rem;">
                        </button>
                    </div>
                </div>
            </div>
        </form>
        
        <div class="row space-between">
            <div class="col-lg-3 col-md-3 col-sm-3">
                <label class="dark-label" for="nombreBusquedaExpedienteBaja">NOMBRE</label>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9">
                <input type="text" class="text-input" id="nombreBusquedaExpedienteBaja" readonly/>
            </div>
        </div>

        <div class="row space-between">
            <div class="col-lg-5 col-md-5 col-sm-5">
                <label class="dark-label" for="tipoPensionBusquedaExpedienteBaja">TIPO DE PENSIÓN</label>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-7">
                <input type="text" class="text-input" id="tipoPensionBusquedaExpedienteBaja" readonly/>
            </div>
        </div>

        <div class="row space-between">
            <div class="col-lg-5 col-md-5 col-sm-5">
                <label class="dark-label" for="delegacionBusquedaExpedienteBaja">DELEGACIÓN</label>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-7">
                <input type="text" class="text-input" id="delegacionBusquedaExpedienteBaja" readonly>
            </div>
        </div>

        <div class="row space-between">
            <div class="col-lg-5 col-md-5 col-sm-5">
                <label class="dark-label" for="ubicacionBusquedaExpedienteBaja">UBICACIÓN</label>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-7">
                <input type="text" class="text-input" id="ubicacionBusquedaExpedienteBaja" readonly>
            </div>
        </div>
        <div class="row space-between">
            <div class="col-lg-3 col-md-3 col-sm-3">
                <label class="dark-label" for="añoBusquedaExpedienteBaja">AÑO</label>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9">
                <input type="number" class="text-input" id="añoBusquedaExpedienteBaja" readonly/>
            </div>
        </div>
    
        <div class="row space-between">
            <div class="col-lg-12 col-sm-12 col-sm-12">
                <label class="dark-label" for="motivoBajaExpediente">MOTIVO</label> 
                <textarea class="text-input mt-3" id="motivoBajaExpediente" name="motivo"></textarea>
            </div>
        </div>
    </div>
        
    <div class="col-lg-3 col-md-3 col-sm-3 vertical-center">
        <button class="img-btn" id="btnBajaUsuario" disabled>
            <div class="row">
                <img src="/icons/guardar.png"  class="col-lg-6 col-md-12 col-sm-12 vertical-center" alt="GUARDAR">
                <p class="col-lg-6 col-md-12 col-sm-12 vertical-center" style="margin: 0;">GUARDAR</p>
            </div>   
        </button>
        <button class="img-btn" id="btnBajaUsuarioCancelar" disabled>
            <div class="row">
                <img src="/icons/folder_cancelar.png" class="col-lg-6 col-md-12 col-sm-12 vertical-center" alt="CANCELAR">
                <p class="col-lg-6 col-md-12 col-sm-12 vertical-center" style="margin: 0;">CANCELAR</p>   
            </div>  
        </button>
    </div>
</div> 
