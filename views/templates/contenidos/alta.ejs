<div class="container">
    <div class="row">
        <div class="col-3 vertical-center">
            <img src="/imgs/foto.png" alt="ICONO DE FOTO" class="foto_usuario">
            <button class="d-flex img-btn space-around">
                <img src="/icons/guardar.png" alt="INGRESAR EXPEDIENTE">
                <p>GUARDAR</p>   
            </button>
            <button class="d-flex img-btn space-around">
                <img src="/icons/folder_cancelar.png" alt="EXTRAER EXPEDIENTE">
                <p>CANCELAR</p>   
            </button>
        </div>
        <div class="col-9">
            <form id="formAltaExpediente">
                <div class="row space-between">
                    <div class="col-2">
                        <label class="dark-label" for="nssAltaExpediente">NSS</label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="text-input" id="nssAltaExpediente" name="nss"/>
                    </div>
                    <!--LUPA-->
                    <div class="col-2">
                        <div class="d-flex justify-content-end">
                            <button class="btn-verde" type="submit" style="margin-top: 0; font-family: none; justify-content: center; display: flex;">
                                <img src="/icons/lupa.png" alt="BUSCAR" style="width: 1rem;">
                            </button>
                        </div>
                    </div>
                </div>
            </form>

            <div class="row space-between">
                <div class="col-3">
                    <label class="dark-label" for="nombreAltaExpediente">NOMBRE</label>
                </div>
                <div class="col-9">
                    <input type="text" class="text-input" id="nombreAltaExpediente"/>
                </div>
            </div>

            <div class="row space-between">
                <div class="col-5">
                    <label class="dark-label" for="tipoPensionAltaExpediente">TIPO DE PENSIÓN</label>
                </div>
                <div class="col-7">
                    <input type="text" class="text-input" id="tipoPensionAltaExpediente"/>
                </div>
            </div>

            <div class="row space-between">
                <div class="col-4">
                    <label class="dark-label" for="ubicacionAltaExpediente">UBICACIÓN</label>
                </div>
                <div class="col-8">
                    <input type="text" class="text-input" id="ubicacionAltaExpediente"/>
                </div>
            </div>


            <div class="row space-between">
                <div class="col">
                    <label class="dark-label" for="observacionesAltaExpediente">OBSERVACIONES</label> 
                    <textarea class="text-input mt-3" id="observacionesAltaExpediente"></textarea>
                </div>
            </div>
        </div>
    </div> 
 </div>